doctype html
html(lang="en")
    head
        title= pageTitle
        link(href='/dist/css/style.min.css', rel='stylesheet')
        link(href='/dist/css/highlight.default.min.css', rel='stylesheet')
        script(src='http://libs.baidu.com/jquery/2.0.0/jquery.min.js')
        script(src='/dist/js/highlight.min.js')
        script(src='/dist/js/all.min.js')
    body
        div.flash
            = flash.error
            = flash.success
        header.head
            div.container
                div.head-logo
                    a(href="#")= site.name
                nav.head-nav
                    ul
                        li.active
                            a(href='#') HOME
                        li
                            a(href='#') TECH
                        li
                            a(href='#') LIFE
                        li
                            a(href='#') ABOUT

        div.wrap
            div.intro
                h1= post.title
                div.tag-list
                    - for(var i = 0; i < post.tag.length; i++) {
                        span= post.tag[i]
                    - }
                div.class-data
                    span= post.date
                    span= post.class

        div.post-content.container
            != post.content
        footer.foot
            div.container
                div.friend
                    h4 友情链接
                    ul
                        li
                            a(href='#') 链接一
                        li
                            a(href='#') 链接一
                        li
                            a(href='#') 链接一
                        li
                            a(href='#') 链接一

                div.copyright
                    h4 版权申明
                    p Powered By R-Blog, based on koa.js
                    p Copyright @ 2015