doctype html
html(lang="en")
    head
        title= pageTitle
        link(href='/dist/css/style.min.css', rel='stylesheet')
        script(src='/dist/js/all.min.js')
    body
        div.flash
            = flash.error
            = flash.success
        header.head
            div.container
                div.head-logo
                    a(href="#")= site.name
                nav.head-nav
                    ul
                        li.active
                            a(href='#') HOME
                        li
                            a(href='#') TECH
                        li
                            a(href='#') LIFE
                        li
                            a(href='#') ABOUT

        div.wrap
            div.intro
                h1 R-Blog
                div.desc
                    p Smart Blog Powered By Koa.js !
                div.repo
                    p
                       a(href="#") R-Blog

        div.post.container
            - for (var i = 0; i < posts.length; i++) {
                div.post-list
                    div.title
                        h3
                            a(href="/post/#{posts[i].url}") #{posts[i].title}
                    div.data
                        span.bold 日期：
                        span 2015-12-4
                    div.tag
                        span.bold 标签：
                        - for (var j = 0; j < posts[i].tag.length; j++) {
                        span
                            a(href='#') #{posts[i].tag[j]}
                        - }
                    div.class
                        span.bold 分类：
                        span
                            a(href='#') #{posts[i].class}
            - }
        footer.foot
            div.container
                div.friend
                    h4 友情链接
                    ul
                        li
                            a(href='#') 链接一
                        li
                            a(href='#') 链接一
                        li
                            a(href='#') 链接一
                        li
                            a(href='#') 链接一

                div.copyright
                    h4 版权申明
                    p Powered By R-Blog, based on koa.js
                    p Copyright @ 2015